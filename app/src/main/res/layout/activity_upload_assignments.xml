<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".TeacherActivities.UploadAssignments">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back_button"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:paddingLeft="6.5dp"
        android:textColor="@color/black"
        android:id="@+id/text"
        android:text="Upload Assignments"
        android:textSize="17dp" />
</LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/baloo"
        android:paddingLeft="6.5dp"
        android:text="Select Semester"
        android:textSize="17dp" />

    <Spinner
        android:id="@+id/UploadAssignments_Spinner_Class"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:entries="@array/Class_Spinner_array" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/baloo"
        android:paddingLeft="6.5dp"
        android:text="Select Semester"
        android:textSize="17dp" />

    <Spinner
        android:id="@+id/UploadAssignmnets_Spinner_subject"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>