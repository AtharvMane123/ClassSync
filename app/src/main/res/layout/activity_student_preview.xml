<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3F2FD"
    android:padding="20dp"
    tools:context=".TeacherActivities.StudentPreview_Activity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/StudentPreview_ProfileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/avatar"
        app:civ_border_width="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StudentPreview_name"
        android:layout_gravity="center"
        android:fontFamily="@font/baloo"
        android:textColor="@color/black"
        android:text="Atharv Mane"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

       android:layout_gravity="center"
        android:id="@+id/StudentPreview_Class"
        android:text="Class: " />

    <TextView
        android:id="@+id/StudentPreview_Roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/baloo"
        android:text="Roll No: "
        android:textColor="#302F2F"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/StudentPreview_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baloo"
        android:text="Email ID: "
        android:textColor="#302F2F"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baloo"
        android:id="@+id/StudentPreview_FathersName"
        android:text="Father's Name: "
        android:textColor="#302F2F"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baloo"
        android:text="Father's Occupation: "
        android:id="@+id/StudentPreview_FathersOccupation"
        android:textColor="#302F2F"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baloo"
        android:text="Mother's Name: "
        android:id="@+id/StudentPreview_MothersName"
        android:textColor="#302F2F"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baloo"
        android:id="@+id/StudentPreview_MothersMob"
        android:text="Mother's Mob: "
        android:textColor="#302F2F"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baloo"
        android:id="@+id/StudentPreview_FathersMob"
        android:text="Father's Mob: "
        android:textColor="#302F2F"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StudentPreview_Gender"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baloo"
        android:text="Gender: "
        android:textColor="#302F2F"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/baloo"
        android:text="Address: "
        android:id="@+id/StudentPreview_Address"
        android:textColor="#302F2F"
        android:textSize="20dp" />

</LinearLayout>