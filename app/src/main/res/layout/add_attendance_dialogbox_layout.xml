<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="7dp"
        android:text="Select Subject"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/AddAttendance_Subject"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_textview"
        android:entries="@array/TY_Subject"
        android:foregroundTint="@color/black"
        android:paddingHorizontal="20dp"
        android:popupElevation="550dp"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="7dp"
        android:text="Select Time Period"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/AddAttendance_TimePeriod"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_textview"
        android:entries="@array/Time_period"
        android:foregroundTint="@color/black"
        android:paddingHorizontal="20dp"
        android:popupElevation="550dp"
        android:spinnerMode="dropdown" />


</LinearLayout>