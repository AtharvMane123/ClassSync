<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserFragments.">
<RelativeLayout
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/HelpDeskText"
        android:text="Request New Course"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/login_textview"
        android:fontFamily="sans-serif-black"
        android:gravity="top"
        android:padding="20dp"
        android:hint="Enter the name of course"
        android:textColor="@color/black"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/HelpDeskEditText"
        android:layout_below="@id/HelpDeskText"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/HelpDeskEditText"
        app:lottie_rawRes="@raw/helpdesk_submit"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:id="@+id/HelpDeskSubmitBtn"
        />
</RelativeLayout>

</FrameLayout>